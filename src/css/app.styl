// app global css in Stylus form

body
    background-color #EEE
footer a
    color #FFF
    text-decoration none
    &:hover
        color #DDD
.area
    max-width 1280px
    margin 15px auto
.tit-show 
    position absolute
    display flex
    width 100%
    height 100%
    top 0
    left 0
    align-items center
    justify-content center
    padding 15px
    text-align center
    background-color rgba(0,0,0,0.75)
    color #FFF
    opacity 0
    transition .5s
    box-sizing border-box
    z-index 2
    cursor pointer
    &:hover 
      opacity 1
      transition .5s
.img-responsive 
    max-width 100%
    height auto
    display block
.logo-footer
    max-width 30%
.menu
    .icon-size
        font-size 1.2em
.detalhes
    .icon-size
        font-size 2em
    .txt-vote
        font-size 1.5em
.alinha-icones *
    vertical-align middle

